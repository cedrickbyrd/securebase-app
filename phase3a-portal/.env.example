# SecureBase Customer Portal Environment Variables
# Copy this file to .env and update with your values

# ===========================================
# API CONFIGURATION (REQUIRED)
# ===========================================
# API Base URL (replace with your actual API Gateway endpoint)
VITE_API_BASE_URL=https://api.securebase.com/v1

# WebSocket URL (for real-time notifications)
VITE_WS_URL=wss://ws.securebase.com

# ===========================================
# ENVIRONMENT (REQUIRED)
# ===========================================
# Environment identifier: development, staging, or production
VITE_ENV=development

# ===========================================
# STRIPE CONFIGURATION (REQUIRED)
# ===========================================
# Stripe publishable key
# Use test key (pk_test_...) for development/staging
# Use live key (pk_live_...) for production
VITE_STRIPE_PUBLIC_KEY=pk_test_YOUR_TEST_KEY_HERE

# Stripe price IDs for different tiers
VITE_HEALTHCARE_PRICE_ID=price_healthcare
VITE_FINTECH_PRICE_ID=price_fintech
VITE_GOVERNMENT_PRICE_ID=price_government
VITE_STANDARD_PRICE_ID=price_standard

# ===========================================
# FEATURE FLAGS (OPTIONAL)
# ===========================================
# Enable pilot program features
VITE_PILOT_PROGRAM_ENABLED=false

# Enable analytics tracking
VITE_ANALYTICS_ENABLED=false
