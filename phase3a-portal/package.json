{
  "name": "securebase-customer-portal",
  "version": "1.0.0",
  "private": true,
  "description": "SecureBase Customer Portal - Phase 3A",
  "type": "module",
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:staging": "cp .env.staging .env && vite build --mode staging",
    "build:production": "cp .env.production .env && vite build --mode production",
    "build:demo": "cp .env.demo .env && vite build --mode demo",
    "preview": "vite preview",
    "deploy:staging": "./deploy-staging.sh",
    "deploy:demo": "./deploy-demo.sh",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@stripe/stripe-js": "^2.4.0",
    "axios": "^1.6.5",
    "chart.js": "^4.4.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^12.34.3",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "recharts": "^2.10.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^23.2.0",
    "vite": "^5.0.11",
    "vitest": "^1.2.0"
  }
}
