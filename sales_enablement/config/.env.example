# Sales Enablement Module - Environment Variables

# Database Configuration
SE_DB_HOST=localhost
SE_DB_PORT=5432
SE_DB_NAME=sales_enablement
SE_DB_USER=se_user
SE_DB_PASSWORD=change-me-in-production
SE_DB_SSL=false
SE_DB_MAX_CONNECTIONS=20

# API Configuration
SE_API_PORT=3000
SE_API_HOST=0.0.0.0
SE_CORS_ORIGINS=http://localhost:5173,http://localhost:3000
SE_RATE_LIMIT_WINDOW=900000
SE_RATE_LIMIT_MAX=100

# Authentication
SE_JWT_SECRET=your-secret-key-change-in-production
SE_JWT_EXPIRES_IN=24h
SE_REFRESH_TOKEN_EXPIRES=7d
SE_PASSWORD_MIN_LENGTH=8
SE_SESSION_TIMEOUT=3600

# Lead Management
SE_LEAD_SCORE_HIGH=70
SE_LEAD_SCORE_MEDIUM=40
SE_LEAD_SCORE_LOW=0
SE_LEAD_AUTO_ASSIGN=true
SE_LEAD_ASSIGN_METHOD=round_robin
SE_LEAD_ARCHIVE_DAYS=365
SE_LEAD_DELETE_DAYS=730

# Content Management
SE_STORAGE_PROVIDER=s3
SE_STORAGE_BUCKET=sales-content
SE_STORAGE_REGION=us-east-1
SE_CDN_URL=https://cdn.securebase.io
SE_MAX_FILE_SIZE=52428800
SE_ALLOWED_TYPES=application/pdf,application/vnd.ms-powerpoint,application/vnd.openxmlformats-officedocument.presentationml.presentation,video/mp4,image/jpeg,image/png
SE_CONTENT_APPROVAL=true
SE_APPROVER_ROLES=role-001,role-002

# Analytics
SE_ANALYTICS_INTERVAL=hourly
SE_ANALYTICS_RETENTION=365
SE_TIMEZONE=America/New_York
SE_EMAIL_REPORTS=true
SE_REPORT_SCHEDULE=0 9 * * 1
SE_FORECASTING_ENABLED=true
SE_FORECAST_MODEL=linear

# Notifications
SE_EMAIL_PROVIDER=sendgrid
SE_EMAIL_API_KEY=your-sendgrid-api-key
SE_EMAIL_FROM=noreply@securebase.io
SE_EMAIL_FROM_NAME=SecureBase Sales
SE_SLACK_ENABLED=false
SE_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SE_SLACK_CHANNEL=#sales
SE_NOTIFY_LEAD_ASSIGNED=true
SE_NOTIFY_STAGE_CHANGE=true
SE_NOTIFY_CONTENT=true
SE_NOTIFY_DEAL_WON=true

# Integrations
SE_CRM_PROVIDER=salesforce
SE_CRM_ENABLED=false
SE_CRM_API_KEY=your-crm-api-key
SE_CRM_SYNC_INTERVAL=300
SE_MARKETING_PROVIDER=marketo
SE_MARKETING_ENABLED=false
SE_MARKETING_API_KEY=your-marketing-api-key

# Feature Flags
SE_FEATURE_AI_SCORING=false
SE_FEATURE_CONTENT_REC=true
SE_FEATURE_PREDICTIVE=false
SE_FEATURE_RBAC=true
SE_FEATURE_WEBHOOKS=false

# Logging
SE_LOG_LEVEL=info
SE_LOG_FORMAT=json
SE_LOG_DESTINATION=console
SE_LOG_FILE=./logs/sales_enablement.log
